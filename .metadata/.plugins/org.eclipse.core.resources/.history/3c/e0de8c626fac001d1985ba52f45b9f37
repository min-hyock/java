package 자료;

import java.util.Scanner;

public class javafestival2_2번 {

	public static void main(String[] args) {

		while (true) {
			Scanner sc = new Scanner(System.in);
			System.out.print(" A 입력 >> ");
			int a = sc.nextInt();
			System.out.print(" B 입력 >> ");
			int b = sc.nextInt();
			int minus = a - b;
			System.out.print("결과 >> " + minus);
			if (a == 0 && b == 0) {
				break;
			}
		}

	}

}
