package 자료;

import java.util.Scanner;

public class javafestival {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("일한 시간을 입력하세요 : ");
		int time = sc.nextInt();
		
		int money = 5000;
		int work = time - 8;
		
		
		if(time > 8) {
			System.out.println("총 임금은" + (time - work) *  money + (int)(work * money * 0.5)+ "원 입니다.");
		}else {
			System.out.println("총 임금은" + time * money + "원 입니다.");
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
