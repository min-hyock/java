package 변수및자료형;

public class ex01변수 {

	public static void main(String[] args) {
		
		// 변수 선언
		// 정수 데이터 4라는 값을 담을 수 있는 num 변수 선언
		int num = 4;
		System.out.println(num);
		
		// num이라는 공간에 있는 데이터를 7로 변경
		// 자료형을 정해주는 건 단 한번만 해주면 된다!
		num = 7;
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
